{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "types": ["reflect-metadata", "node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
           "es2016"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}